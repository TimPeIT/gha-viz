{
  "name": "gha-viz",
  "version": "1.0.0",
  "description": "Visualisierung von GitHub Actions Workflows",
  "main": "index.js",
  "scripts": {
    "build": "node index.js diagram .github/workflows/ci.yml",
    "diagram": "node index.js diagram .github/workflows/ci.yml",
    "text": "node index.js text .github/workflows/ci.yml",
    "deploy": "mkdir -p deploy && cp output/diagram.html deploy/diagram.html",
    "test": "jest --coverage --silent",
    "lint": "eslint ."
  },
  "devDependencies": {
    "eslint": "^9.37.0",
    "jest": "^29.0.0"
  },
  "dependencies": {
    "js-yaml": "^4.1.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageReporters": [
      "text",
      "lcov"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 2,
        "functions": 5,
        "lines": 5,
        "statements": 5
      }
    }
  }
}
